.logo
    width: 80px
    height: 80px
    text-align: right
    border: 2px solid #fff
    padding: 8px 10px
    word-break: break-word
    color: #fff
    font-weight: 500
    font-size: 14px
    line-height: 16px
    fixed: top 24px left 24px

.venture
    fixed: bottom 24px right 24px
    padding: 12px 16px
    border-radius: 4px
    background-color: rgba(255, 255, 255, .1)
    line-height: 22px
    font-size: 14px
    a
        color: #fff

body
    background-color: #000
    overflow: hidden

section.main
    display: flex
    align-items: center
    justify-content: center
    height: 100%
    width: 100%
    max-width: 100%
    .inner
        width: 100%
        padding: 24px
        max-width 748px

+below('m')
    h1
        font-size: font-size-h2
